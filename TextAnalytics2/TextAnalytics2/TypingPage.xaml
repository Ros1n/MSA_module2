<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAnalytics2.TypingPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label FontSize="Large" VerticalOptions="Start" Text="Text Analytics" />
            <Label Text="Text Box" />
            <Entry Text="good day"   x:Name="sentence" />
            <Label Text="ID" />
            <Entry Text="1" Keyboard="Numeric"  x:Name="id" />
            <Label Text="Language" />
            <Entry Text="en"  x:Name="language" />
            <Button Text="Send" HorizontalOptions="Center"  x:Name="sendButton" Clicked="MakeAnalyticsRequest" />
            <Label Text="[sentiment id]" x:Name="tag1" />
            <Label Text="[score]" x:Name="tag2" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>